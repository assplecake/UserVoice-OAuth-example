<!-- Main hero unit for a primary marketing message or call to action -->
<div class="hero-unit">
  <h1>Uservoice OAuth Example</h1>
  <p><a class="btn primary large" href="/authorize-uservoice">Authorize yourself &raquo;</a></p>
</div>

<!-- Example row of columns -->
<div class="row">
  <div class="span6">
    <h2>Request token</h2>
    <textarea rows="20" cols="30" style="width:100%;"><%= @request_token.inspect %></textarea>
  </div>
  <div class="span5">
    <h2>Access token</h2>
     <textarea rows="20" cols="30" style="width:100%;"><%= @access_token.inspect %></textarea>
 </div>
  <div class="span5">
    <h2>Current user</h2>
    <textarea rows="20" cols="30" style="width:100%;"><%= @uservoice_user.inspect %></textarea>
  </div>
</div>